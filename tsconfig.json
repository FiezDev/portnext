{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution":"node",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/public/*": ["public/*"],

      "@/context/*": ["context/*"],
      "@/services/*": ["services/*"],
      "@/model/*": ["model/*"],
      "@/src/*": ["src/*"],
      "@/styles/*": ["styles/*"],

      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],

      "@/images/*": ["public/images/*"],
      "@/fonts/*": ["public/fonts/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
